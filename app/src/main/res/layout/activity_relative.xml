<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Lin1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/firstTw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="boom"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/secondTw"
            android:layout_toRightOf="@+id/firstTw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="bi"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/thirdTw"
            android:layout_toRightOf="@+id/secondTw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="bu"
            android:background="@color/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Lin2"
        android:layout_below="@+id/Lin1"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/tw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="boom"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/tw2"
            android:layout_below="@+id/tw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="bi"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tw3"
            android:layout_below="@+id/tw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="bu"
            android:background="@color/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lin3"
        android:layout_below="@+id/Lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/bbb"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Fistname :"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Lastname:"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="3dp">
            <TextView
                android:id="@+id/showName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Palathip"/>
            <TextView
                android:id="@+id/showLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Wuttiprayoon"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lin4"
        android:layout_below="@+id/Lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorLightblue"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_foreground"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorAccent"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_foreground"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_foreground"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_foreground"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lin5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lin4"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/fName"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:hint="First Name"
            />

        <EditText
            android:id="@+id/lName"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:hint="Last Name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Lin5"
        android:gravity="center"
        >

        <Button
            android:id="@+id/bSubmit"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Submit"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:textAllCaps="false"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/bClear"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Clear"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:textAllCaps="false"
            android:layout_margin="5dp"/>


    </LinearLayout>




</RelativeLayout>